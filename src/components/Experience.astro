---
// Icons
import MoreIcon from "../icons/More.astro";

// Components
import JobDetailsModal from "./JobDetailsModal.astro";

// Data
import { experienceData, type Job } from "../data/experienceData";
---

<div class="section-child flex mt-6 py-5 px-3 container-highlight">
  <ol class="relative ml-3 w-full">
    {
      (experienceData as Job[]).map((job, index) => (
        // Job Item
        <li class="relative flex md:flex-row flex-col justify-between mb-2 ms-6 md:gap-8">
          <div class="rounded md:w-5/12
          flex flex-col sm:items-start items-center">
            {/* Experience Timeline */}
            <div
              class="absolute -start-[1.475rem] top-2 bottom-0 w-0.5 h-full
              bg-gradient-to-t from-transparent to-navbar-third/90 dark:to-purple-500"
            />

            {/* Experience Timeline Dot */}
            <div
              class="absolute -start-[1.92rem] top-2 size-4 bg-navbar-third/90
              rounded-full border-1 border-white dark:bg-purple-500"
            />

            {/* Job Icon and Position line */}
            <div class="relative flex sm:flex-row flex-col items-center gap-3 sm:justify-start justify-center">
              {/* Job Icon */}
              <div
                class={`size-9 p-1 rounded-lg flex items-center justify-center shadow-md lg:mb-0 md:mb-6
                border ${job.company.borderColorIcon} ${job.company.darkBorderColorIcon} 
                ${job.company.bgColorIcon} ${job.company.darkBgColorIcon}`}
              >
                <job.company.icon class="size-full" />
              </div>

              {/* Job Position */}
              <h3 class="text-2xl font-semibold text-gray-900 dark:text-white
                sm:text-start text-center">
                {job.position}
              </h3>
            </div>

            {/* Company Name */}
            <span
              class="block mt-1 mb-2 text-xl font-semibold sm:text-start text-center
              leading-none text-navbar-third/90 dark:text-purple-400 sm:ml-12"
            >
              {job.company.name}
            </span>

            {/* Company Description */}
            <p
              class="mb-2 md:mb-4 text-base font-normal text-gray-600 sm:text-start text-center
            dark:text-purple-200 text-pretty sm:ml-12 -mt-1.5"
            >
              {job.company.description}
            </p>

            <div class="md:hidden flex sm:mt-4 mt-1">
              {/* Date Tag */}
              <span
                class="flex justify-end bg-navbar-third/90 text-purple-100 font-medium text-sm
              px-2.5 py-0.5 rounded dark:bg-dark-purple dark:text-purple-100 shadow sm:text-start text-center"
              >
                {job.date.start + " — " + job.date.end}
              </span>
            </div>
          </div>

          <div class="flex flex-col sm:items-start items-center pt-1 flex-1 md:w-7/12 md:px-0 px-1">
            <div class="md:flex justify-end hidden w-full sm:text-start text-center">
              {/* Date Tag */}
              <span
                class="flex justify-end bg-navbar-third/90 text-purple-100 font-medium text-sm
                px-2.5 py-0.5 rounded dark:bg-dark-purple dark:text-purple-100 shadow"
              >
                {job.date.start + " — " + job.date.end}
              </span>
            </div>

            {/* Job Description */}
            <p
              class="mb-2 text-base font-normal text-gray-700
            dark:text-gray-300 text-pretty md:pt-2 sm:text-start text-center"
            >
              {job.description}
            </p>
            <button
              class="select-none open-modal-btn w-fit flex p-1 -ml-1 text-navbar-third/90 hover:text-purple-700
                dark:text-purple-400 hover:dark:text-purple-300 transition-colors"
              data-modal-id={`job-modal-${index}`}
              aria-label={`Saber más sobre el puesto en ${job.company.name}`}
            >
              <span class="font-semibold">Saber más</span>
              <MoreIcon />
            </button>
          </div>
        </li>
      ))
    }
  </ol>
</div>

{/* Render a modal for each job, passing data via props */}
{
  (experienceData as Job[]).map((job, index) => (
    <JobDetailsModal id={`job-modal-${index}`} job={job} />
  ))
}

<script>
  // Global logic to close modals with animation
  document.addEventListener("click", (event) => {
    const target = event.target as HTMLElement;
    if (!target) return;

    // 0. Open modal
    const openBtn = target.closest(".open-modal-btn");
    if (openBtn && openBtn instanceof HTMLElement) {
      const modalId = openBtn.dataset.modalId;
      const dialog = document.getElementById(
        modalId as string
      ) as HTMLDialogElement;
      if (dialog) {
        dialog.showModal();
        const scrollContainer = dialog.querySelector(".custom-scrollbar");
        if (scrollContainer) {
          scrollContainer.scrollTop = 0;
        }
      }
    }

    // 1. Close when clicking the close button
    const closeBtn = target.closest(".close-modal-btn");
    if (closeBtn) {
      const dialog = closeBtn.closest("dialog");
      if (dialog) closeDialog(dialog);
      return;
    }

    // 2. Close when clicking outside (backdrop)
    if (target.tagName === "DIALOG") {
      const dialog = target as HTMLDialogElement;
      const rect = dialog.getBoundingClientRect();
      const isInDialog =
        rect.top <= event.clientY &&
        event.clientY <= rect.top + rect.height &&
        rect.left <= event.clientX &&
        event.clientX <= rect.left + rect.width;

      if (!isInDialog) {
        closeDialog(dialog);
      }
    }
  });

  function closeDialog(dialog: HTMLDialogElement) {
    dialog.classList.add("closing");
    dialog.addEventListener(
      "animationend",
      () => {
        dialog.classList.remove("closing");
        dialog.close();
      },
      { once: true }
    );
  }
</script>
